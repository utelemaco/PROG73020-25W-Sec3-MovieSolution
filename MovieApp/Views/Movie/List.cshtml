@model List<Movie>

@{
	ViewData["Title"] = "Movies";
}
<h1>Movies</h1>
<a asp-controller="Movie" asp-action="Add">Add a Movie</a>
<form asp-controller="Movie" asp-action="Search" method="get">
	<input type="text" name="Title" value="@ViewBag.SearchTitle" />
	<input type="submit" value="Search"/>
</form>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Id</th>
			<th>Title</th>
			<th>Genre</th>
			<th>Year</th>
			<th>Release Date</th>
			<th>Rating</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
@foreach(var movie in Model) {
		<tr>
			<td>@movie.Id</td>
			<td>@movie.Title</td>
			<td>@movie.Genre?.Name</td>
			<td>@movie.Year</td>
			<td>@movie.ReleaseDate?.ToString("d")</td>
			<td>@movie.Ratting</td>
			<td>
				<a asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id">Edit</a>
				<a asp-controller="Movie" asp-action="PrepareDelete" asp-route-id="@movie.Id">Delete</a>
			</td>
		</tr>
}
	</tbody>
</table>