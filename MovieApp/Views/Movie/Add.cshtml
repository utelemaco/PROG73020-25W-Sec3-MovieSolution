@model Movie

<h1>Add a new Movie</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<form method="post">
	<label asp-for="Title">Title</label>
	<input asp-for="Title" type="text" /><br/>
	<label asp-for="Year">Year</label>
	<input asp-for="Year" type="number" /><br />
	<label asp-for="Ratting">Rating</label>
	<input asp-for="Ratting" type="number" /><br />
	<label asp-for="Genre">Genre</label>
	<select asp-for="GenreId">
		<option value="0">Select a genre</option>
		@foreach (var g in ViewBag.Genres)
		{
			<option value="@g.Id">@g.Name</option>
		}
	</select><br />
	<input type="submit" value="Create" />
</form>
