@model List<Movie>

@{
	ViewData["Title"] = "Movies";
}
<h1>Movies</h1>
<a asp-asp-controller="Movie" asp-action="Add">Add a Movie</a>
<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Id</th>
			<th>Title</th>
			<th>Year</th>
			<th>Ratting</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
@foreach(var movie in Model) {
		<tr>
			<td>@movie.Id</td>
			<td>@movie.Title</td>
			<td>@movie.Year</td>
			<td>@movie.Ratting</td>
			<td>
				<a asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id">Edit</a>
				<a asp-controller="Movie" asp-action="PrepareDelete" asp-route-id="@movie.Id">Delete</a>
			</td>
		</tr>
}
	</tbody>
</table>